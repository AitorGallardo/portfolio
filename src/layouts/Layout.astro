---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <div id='flashlight'></div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'Playfair Display', serif;
    src: url('/fonts/PlayfairDisplay-VariableFont_wght.woff2') format('woff2');
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Quattrocento', serif;
    src: url('/fonts/Quattrocento-Bold.woff2') format('woff2');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }

  .font-playfair {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
  }

  .font-quattrocento {
    font-family: 'Quattrocento', serif;
    font-weight: 800;
  }

  .text-bg-gradient-rainbow{
    -webkit-text-fill-color: transparent;
    background-image: linear-gradient(55deg,#fa0,#fd66cb 25%,#9f6eff 32%,#0af 45%,#0fa 67%);
    -webkit-background-clip: text;
  }
  .text-bg-gradient-blue_green{
    -webkit-text-fill-color: transparent;
    background-image: linear-gradient(135deg,#0af 15%,#0fa 40%);
    -webkit-background-clip: text;
  }
  .text-bg-gradient-orange_rose{
    -webkit-text-fill-color: transparent;
    background-image: linear-gradient(135deg,#fa0 12%,#f0a 25%);
    -webkit-background-clip: text;
  }

  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: black;
    /* background-color: #232634; */
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  body{
    position: relative;
    height: 100%;
  }
  #flashlight {
    --Xpos: 50vw;
    --Ypos: 50vh;
  }
  #flashlight:before {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: absolute;
    pointer-events: none;
    background: radial-gradient(
      circle 45em at var(--Xpos) var(--Ypos),
      rgba(35, 38, 52, 0),
      rgba(35, 38, 52, 1)
    );
    z-index: -98;
  }
</style>


<script>
  const flashlight = document.querySelector('#flashlight') as HTMLElement;

  document.addEventListener('mousemove', (e) => {
    const { pageX, pageY } = e;
    flashlight.style.setProperty('--Xpos', `${pageX}px`);
    flashlight.style.setProperty('--Ypos', `${pageY}px`);
  });
</script>
