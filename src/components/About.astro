---
import Timeline from './Timeline.astro';
import IconsGrid from './IconsGrid.astro';
---

<section
  class='flex items-center justify-center h-screen w-screen py-52 px-0 md:px-16 lg:px-32 xl:px-48 min-[1680px]:px-80'
>
  <div class='left_about_tech flex flex-col justify-between grow h-full'>
    <div class='top_about'>
      <h5
        class='font-quattrocento text-4xl mb-4 md:mb-[56px] text-bg-gradient-orange_rose'
      >
        Love to build ideas.
      </h5>
      <h4
        class='font-quattrocento text-5xl mb-4 md:mb-[56px] text-bg-gradient-rainbow'
      >
        On my way to learn by doing.
      </h4>
    </div>
    <div class='bot_technologies'>
      <h4 class='font-quattrocento text-5xl text-white mb-14'>Technologies</h4>
      <IconsGrid />
    </div>
  </div>
  <div class='right_experience basis-1/3'>
    <h4 class='font-quattrocento text-5xl text-white mb-14'>Experience</h4>

    <Timeline />
  </div>
</section>
