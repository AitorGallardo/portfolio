---
import Timeline from './Timeline.astro';
import IconsGrid from './IconsGrid.astro';
---

<section
  class='flex items-start justify-center h-full md:h-screen w-screen flex-col xl:flex-row xl:items-center  py-52 px-16 lg:px-28 min-[1680px]:px-80'
>
  <div
    class='left_about_tech flex-col justify-between grow h-full hidden xl:flex'
  >
    <div class='top_about'>
      <h5
        class='font-quattrocento text-4xl 2xl:text-4xl mb-4 md:mb-14 text-bg-gradient-orange_rose'
      >
        Love to build ideas.
      </h5>
      <h4
        class='font-quattrocento text-5xl 2xl:text-5xl mb-4 md:mb-14 text-bg-gradient-rainbow'
      >
        On my way to learn by doing.
      </h4>
    </div>
    <div class='bot_technologies'>
      <h4 class='font-quattrocento text-4xl text-white mb-10'>Technologies</h4>
      <IconsGrid />
    </div>
  </div>
  <div class='top_about flex flex-col w-full items-center text-center xl:hidden'>
    <h5
      class='font-quattrocento text-3xl mb-4 text-bg-gradient-orange_rose'
    >
      Love to build ideas.
    </h5>
    <h4
      class='font-quattrocento text-5xl mb-20 text-bg-gradient-rainbow'
    >
      On my way to learn by doing.
    </h4>
  </div>
  <div class='right_experience basis-1/3 mb-20 xl:mb-0 '>
    <h4 class='font-quattrocento text-3xl md:text-4xl text-white mb-10 max-xl:text-center'>Experience</h4>

    <Timeline />
  </div>
  <div class='bot_technologies xl:hidden w-full text-center'>
    <h4 class='font-quattrocento text-3xl text-white mb-10'>Technologies</h4>
    <IconsGrid />
  </div>
</section>
